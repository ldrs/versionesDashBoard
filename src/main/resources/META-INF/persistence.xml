<persistence>
   <persistence-unit name="dashboardDeployement">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>${HIBERNATE.DATASOURCE}</jta-data-source>
      <properties>
      	<property name="hibernate.dialect"   value="${HIBERNATE.DIALECTO}"/>
         <property name="hibernate.hbm2ddl.auto" value="${HIBERNATE.DDL}"/>
      </properties>
   </persistence-unit>
</persistence>